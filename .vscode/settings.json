{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": ["--no-debugger", "--no-reload"],
            "env": {"FLASK_APP": "run.py", "FLASK_ENV": "development"},
            "envFile": "${workspaceFolder}/.env",
            "debug": true
        }
    ]
}
